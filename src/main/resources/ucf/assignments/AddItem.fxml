<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="205.0" prefWidth="436.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="nameField" layoutX="15.0" layoutY="52.0" prefHeight="35.0" prefWidth="407.0" promptText="Name:" />
      <TextField fx:id="serialNumberField" layoutX="14.0" layoutY="102.0" prefHeight="35.0" prefWidth="219.0" promptText="Serial Number: XXXXXXXXXX" />
      <TextField fx:id="valueField" layoutX="243.0" layoutY="102.0" prefHeight="35.0" prefWidth="179.0" promptText="Value: $0.00" />
      <Pane prefHeight="36.0" prefWidth="436.0" styleClass="pane" stylesheets="@stylesheet.css">
         <children>
            <Text layoutX="14.0" layoutY="25.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add an Item">
               <font>
                  <Font name="SansSerif Regular" size="16.0" />
               </font>
            </Text>
         </children>
      </Pane>
      <Button fx:id="addItemBtn" layoutX="305.0" layoutY="155.0" mnemonicParsing="false" onAction="#addItemBtnClicked" prefHeight="35.0" prefWidth="117.0" stylesheets="@stylesheet.css" text="Add Item" />
      <Button cancelButton="true" layoutX="15.0" layoutY="155.0" mnemonicParsing="false" onAction="#cancelBtnClicked" prefHeight="35.0" prefWidth="117.0" stylesheets="@stylesheet.css" text="Cancel" />
   </children>
</AnchorPane>
